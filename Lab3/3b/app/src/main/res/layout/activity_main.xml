<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.benjo.lab3b.MainActivity">

    <fragment
        android:id="@+id/instructionFragment"
        android:name="com.example.benjo.lab3b.InstructionFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_list">
    </fragment>

    <fragment
        android:id="@+id/whatToDoFragment"
        android:name="com.example.benjo.lab3b.WhatToDoFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_instructions"
        android:layout_below="@id/instructionFragment">
    </fragment>

</RelativeLayout>
